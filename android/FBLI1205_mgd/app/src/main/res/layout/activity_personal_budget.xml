<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BudgetActivity.PersonalBudgetActivity">

    <TextView
        android:id= "@+id/personalbudget"
        android:layout_width="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:textSize="30dp"
        android:layout_height="50dp" />

    <TextView
        android:id= "@+id/textview7"
        android:layout_width="wrap_content"
        android:layout_alignParentTop="true"
        android:text="개인 예산 잔액"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:textSize="30dp"
        android:layout_height="50dp" />

    <TextView
        android:id= "@+id/textview6"
        android:layout_width="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="100dp"
        android:text="지출내역"
        android:textSize="20dp"
        android:layout_alignTop="@+id/personal_icon"
        android:layout_height="30dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/mspent_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignTop="@+id/personalbudget"
        android:layout_alignBottom="@+id/go_dutch"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="50dp"
        android:clickable="false"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager" />

    <Button
        android:id= "@+id/go_dutch"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="5dp"
        android:text="더치페이"
        android:layout_width="85dp"
        android:layout_height="45dp" />

    <Button
        android:id="@+id/btn_calculate"
        android:layout_width="85dp"
        android:layout_height="45dp"
        android:layout_alignStart="@+id/go_dutch"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="95dp"
        android:layout_marginBottom="5dp"
        android:text="정산" />

    <Button
        android:id="@+id/setBudget"
        android:layout_width="85dp"
        android:layout_height="45dp"
        android:layout_alignStart="@+id/btn_calculate"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="95dp"
        android:layout_marginBottom="5dp"
        android:text="예산설정" />

    <Button
        android:id= "@+id/apply_spent"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/setBudget"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="95dp"
        android:layout_width="85dp"
        android:text="지출입력"
        android:layout_height="45dp" />

    <Button
        android:id="@+id/btn_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/personalbudget"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="-50dp"
        android:text="Group" />
</RelativeLayout>