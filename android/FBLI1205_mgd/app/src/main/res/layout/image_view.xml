<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/my_list_sptr"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/imageviewer"
        android:layout_width="230dp"
        android:layout_height="230dp"
        android:src="@drawable/loading" />

    <TextView
        android:id="@+id/textviewer"
        android:layout_width="100dp"
        android:layout_height="230dp"
        android:layout_alignStart="@+id/imageviewer"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="230dp"
        android:gravity="center"
        android:layout_marginEnd="76dp"
        android:layout_toEndOf="@+id/imageviewer"
        android:textSize="14sp"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/downloadbtn"
        android:layout_width="76dp"
        android:layout_height="115dp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/my_btn_bg"
        android:layout_marginEnd="0dp"
        android:text="다운로드" />

    <Button
        android:id="@+id/deletebtn"
        android:layout_width="76dp"
        android:layout_height="115dp"
        android:layout_alignTop="@+id/downloadbtn"
        android:layout_alignParentEnd="true"
        android:background="@drawable/my_btn_bg"
        android:layout_marginTop="115dp"
        android:layout_marginEnd="0dp"
        android:text="삭제" />

</RelativeLayout>